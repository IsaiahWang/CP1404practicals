BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            on_text: app.convert_miles_to_km(input_number.text)
            size_hint: (0.8,1.0)
            font_size: 35
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.2,1.0)
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text,1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text,-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert_miles_to_km(input_number.text)
    Label:
        id: output_label
        text: app.output_km
        font_size: 50
        color : (1, 1, 0, 1)

