BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size : 49
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            color: (1, 0.753, 0.796, 1)
            font_size: 30
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Enter a number and press "square"'


